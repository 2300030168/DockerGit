package com.klef.fsd.sdp.controller;

import com.klef.fsd.sdp.dto.ProductDTO;
import com.klef.fsd.sdp.model.Product;
import com.klef.fsd.sdp.service.ProductService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;
import org.springframework.web.multipart.MultipartFile;

import java.io.File;
import java.util.ArrayList;
import java.util.List;

@RestController
@RequestMapping("/product")
@CrossOrigin("*")
public class ProductController {

    @Autowired
    private ProductService productService;

    // ✅ Add Product with Image (File System)
    @PostMapping("/addproduct")
    public ResponseEntity<String> addProduct(
            @RequestParam("category") String category,
            @RequestParam("name") String name,
            @RequestParam("description") String description,
            @RequestParam("cost") double cost,
            @RequestParam("url") String url,
            @RequestParam("productimage") MultipartFile file) {
        try {
            if (file.isEmpty()) {
                return ResponseEntity.badRequest().body("Image file is required.");
            }

            String uploadDirPath = System.getProperty("user.dir") + File.separator + "product-images";
            File uploadDir = new File(uploadDirPath);
            if (!uploadDir.exists()) uploadDir.mkdirs();

            String filename = System.currentTimeMillis() + "_" + file.getOriginalFilename();
            File destFile = new File(uploadDir, filename);
            file.transferTo(destFile);

            Product product = new Product();
            product.setCategory(category);
            product.setName(name);
            product.setDescription(description);
            product.setCost(cost);
            product.setUrl(url);
            product.setImagePath("/product-images/" + filename);  // ✅ Relative path for frontend use

            String result = productService.addProduct(product);
            return ResponseEntity.ok(result);

        } catch (Exception e) {
            e.printStackTrace();
            return ResponseEntity.status(500).body("Error uploading product: " + e.getMessage());
        }
    }

    // ✅ Get All Products
    @GetMapping("/viewallproducts")
    public ResponseEntity<List<ProductDTO>> viewAllProducts() {
        List<Product> products = productService.viewAllProducts();
        List<ProductDTO> productDTOList = new ArrayList<>();

        for (Product p : products) {
            ProductDTO dto = new ProductDTO();
            dto.setId(p.getId());
            dto.setCategory(p.getCategory());
            dto.setName(p.getName());
            dto.setDescription(p.getDescription());
            dto.setCost(p.getCost());
            dto.setUrl(p.getUrl());
            dto.setImagePath(p.getImagePath());  // ✅ already includes relative path

            productDTOList.add(dto);
        }

        return ResponseEntity.ok(productDTOList);
    }

    // ✅ Get Product by ID
    @PostMapping("/displayproductbyid")
    public ResponseEntity<ProductDTO> displayProductById(@RequestParam int pid) {
        Product p = productService.viewProductById(pid);
        if (p == null) {
            return ResponseEntity.status(404).body(null);
        }

        ProductDTO dto = new ProductDTO();
        dto.setId(p.getId());
        dto.setCategory(p.getCategory());
        dto.setName(p.getName());
        dto.setDescription(p.getDescription());
        dto.setCost(p.getCost());
        dto.setUrl(p.getUrl());
        dto.setImagePath(p.getImagePath());

        return ResponseEntity.ok(dto);
    }
}
