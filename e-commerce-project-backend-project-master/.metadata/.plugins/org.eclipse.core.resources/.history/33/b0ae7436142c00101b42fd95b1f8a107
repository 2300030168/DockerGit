package com.klef.fsd.sdp.controller;

import java.io.File;
import java.nio.file.Files;
import java.util.ArrayList;
import java.util.List;

import jakarta.servlet.http.HttpServletResponse;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.http.ResponseEntity;
import org.springframework.util.MimeTypeUtils;
import org.springframework.web.bind.annotation.*;
import org.springframework.web.multipart.MultipartFile;

import com.klef.fsd.sdp.dto.ProductDTO;
import com.klef.fsd.sdp.model.Product;
import com.klef.fsd.sdp.service.ProductService;

@RestController
@RequestMapping("/product")
@CrossOrigin("*")
public class ProductController {

    @Autowired
    private ProductService productService;

    // ✅ Upload Product with Image
    @PostMapping("/addproduct")
    public ResponseEntity<String> addProduct(
            @RequestParam("category") String category,
            @RequestParam("name") String name,
            @RequestParam("description") String description,
            @RequestParam("cost") double cost,
            @RequestParam(value = "url", required = false) String url,
            @RequestParam("productimage") MultipartFile file) {

        try {
            if (file == null || file.isEmpty()) {
                return ResponseEntity.badRequest().body("Product image is required.");
            }

            String uploadDir = "product-images";
            File dir = new File(uploadDir);
            if (!dir.exists()) {
                dir.mkdirs();
            }

            String filename = System.currentTimeMillis() + "_" + file.getOriginalFilename();
            File destination = new File(uploadDir + File.separator + filename);
            file.transferTo(destination);

            Product p = new Product();
            p.setCategory(category);
            p.setName(name);
            p.setDescription(description);
            p.setCost(cost);
            p.setUrl(url);
            p.setImagePath(filename); // ✅ Save only filename

            String result = productService.addProduct(p);
            return ResponseEntity.ok(result);

        } catch (Exception e) {
            e.printStackTrace();
            return ResponseEntity.status(500).body("Error uploading product: " + e.getMessage());
        }
    }

    // ✅ Get All Products
    @GetMapping("/viewallproduct")
    public ResponseEntity<List<ProductDTO>> viewAllProduct() {
        List<Product> productList = productService.viewAllProducts();
        List<ProductDTO> productDTOList = new ArrayList<>();

        for (Product p : productList) {
            ProductDTO dto = new ProductDTO();
            dto.setId(p.getId());
            dto.setCategory(p.getCategory());
            dto.setName(p.getName());
            dto.setDescription(p.getDescription());
            dto.setCost(p.getCost());
            dto.setUrl(p.getUrl());
            dto.setImagePath("/images/" + p.getImagePath()); // ✅ Public path

            productDTOList.add(dto);
        }

        return ResponseEntity.ok(productDTOList);
    }

    // ✅ Get product by ID
    @PostMapping("/displayproductbyid")
    public ResponseEntity<ProductDTO> displayProductById(@RequestParam int pid) {
        Product p = productService.viewProductById(pid);

        if (p == null) {
            return ResponseEntity.status(404).body(null);
        }

        ProductDTO dto = new ProductDTO();
        dto.setId(p.getId());
        dto.setCategory(p.getCategory());
        dto.setName(p.getName());
        dto.setDescription(p.getDescription());
        dto.setCost(p.getCost());
        dto.setUrl(p.getUrl());
        dto.setImagePath("/images/" + p.getImagePath());

        return ResponseEntity.ok(dto);
    }
}
